rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'Admin';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can read/write any user profile
      // Students can only read their own profile
      allow read: if request.auth.uid != null && (isAdmin(request.auth.uid) || request.auth.uid == userId);
      allow write: if request.auth.uid != null && isAdmin(request.auth.uid);
    }

    // Rules for the 'students' collection
    match /students/{studentId} {
      // Only admins can read and write to the students collection
      allow read, write: if request.auth.uid != null && isAdmin(request.auth.uid);
    }
  }
}